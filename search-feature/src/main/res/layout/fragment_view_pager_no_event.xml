<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.search_feature.presentation.views.fragments.ViewPagerNoEventFragment">

    <ImageView
        android:layout_width="@dimen/search_image_size"
        android:layout_height="@dimen/search_image_size"
        android:layout_marginTop="@dimen/spacing_xxl_2"
        android:src="@drawable/ic_icon_zoom" />

    <TextView
        android:layout_width="@dimen/invite_text_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/invite_margin_top"
        android:text="@string/invite_to_search_text"
        android:textAlignment="center"
        android:textAppearance="@style/TextStyle10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/invite_example_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_to_search_example_label"
            android:textAppearance="@style/TextStyle10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_to_search_example"
            android:textAlignment="center"
            android:textAppearance="@style/Link" />

    </LinearLayout>
</LinearLayout>